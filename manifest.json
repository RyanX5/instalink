{
    "name": "InstaLink",
    "description": "A browser extension that instantly generates QR codes",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "main.html",
        "default_icon": "instalink.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; style-src 'self' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com"
    }
}